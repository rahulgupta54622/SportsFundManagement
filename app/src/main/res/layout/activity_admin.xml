<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin"
    android:background="#123456">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="13dp"
        android:gravity="center"
        android:text="ADMIN"
        android:textColor="#fff"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_add_authority"
        android:layout_width="272dp"
        android:layout_height="94dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="34dp"
        android:text="Add an authority"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_delete_authority"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_add_team"
        android:layout_width="272dp"
        android:layout_height="80dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="22dp"
        android:text="Add a team"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_delete_team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_delete_team"
        android:layout_width="272dp"
        android:layout_height="80dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="154dp"
        android:text="delete a team"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_delete_authority"
        android:layout_width="272dp"
        android:layout_height="97dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="56dp"
        android:text="Delete an authority"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>